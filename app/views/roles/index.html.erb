<p id="notice"><%= notice %></p>

<h1>Roles</h1>

<table id="table" data-toggle="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <%= form_tag update_multiple_roles_path do %>
    <% @roles.each do |role| %>
      <tr>
        <td>
          
        <%= hidden_field_tag('roles[]', role.id) -%>
        <%= check_box_tag 'roles[]', role.id, role.status ? true : false -%>
        </td>
        <td><%= role.name %></td>
        <td><%= role.status?? 'Active' : 'InActive' %></td>
        <td><%= link_to 'Show', role %></td>
        <td><%= link_to 'Edit', edit_role_path(role) %></td>
        <td><%= link_to 'Destroy', role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
      <div><%= submit_tag 'Save' %></div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Role', new_role_path %>
